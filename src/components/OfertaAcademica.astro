<script>
    let informaticaBtn = document.getElementById("informatica");
    let contaduriaBtn = document.getElementById("contaduria");
    let economiaBtn = document.getElementById("economia");
    let administracionEmpresasBtn = document.getElementById("administracionEmpresas");
    let publicidadBtn = document.getElementById("publicidad");
    let comercioBtn = document.getElementById("comercio");
    let derechosTelecomunicacionesBtn = document.getElementById("derechosTelecomunicaciones");
    let educacionDistanciaBtn = document.getElementById("educacionDistancia");
    let imgchange = document.getElementById("imgchange");

    informaticaBtn.onclick = function() {
        imgchange.src = "../src/img/Informatica.webp";
        iconochange.src = "../src/img/informaticaIcon.webp";
        imgchange.classList.toggle("animate-blurred-fade-in");

    }
